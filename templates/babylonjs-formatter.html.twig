<div class="babylonjs-viewer" style="position: relative;">
  <canvas id="babylonjs-canvas" style="width: 100%; height: 500px;"></canvas>
  
  <!-- Controles reorganizados -->
  <div class="viewer-controls">
    <!-- Grupo izquierda (zoom) -->
    <div class="zoom-controls">
      <button id="zoomIn"><i class="fas fa-plus"></i></button>
      <button id="zoomOut"><i class="fas fa-minus"></i></button>
    </div>

    <!-- Grupo derecha (rotación - nuevo layout) -->
    <div class="directional-pad">
      <div class="dpad-row">
        <div class="dpad-cell"></div>
        <div class="dpad-cell"><button id="rotateUp"><i class="fas fa-chevron-up"></i></button></div>
        <div class="dpad-cell"></div>
      </div>
      <div class="dpad-row">
        <div class="dpad-cell"><button id="rotateLeft"><i class="fas fa-chevron-left"></i></button></div>
        <div class="dpad-cell"></div>
        <div class="dpad-cell"><button id="rotateRight"><i class="fas fa-chevron-right"></i></button></div>
      </div>
      <div class="dpad-row">
        <div class="dpad-cell"></div>
        <div class="dpad-cell"><button id="rotateDown"><i class="fas fa-chevron-down"></i></button></div>
        <div class="dpad-cell"></div>
      </div>
    </div>
    
    <!-- Botón reset (abajo derecha) -->
    <div class="reset-complete">
      <button id="resetView" class="reset-button" title="Reset view"><i class="fas fa-undo-alt"></i></button>
      <button id="completeView" class="complete-view" title="Complete view"><i id="completeViewIcon" class="fas fa-expand"></i></button>
    </div>
</div>